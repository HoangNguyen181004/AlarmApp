<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header với tiêu đề và icon -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hẹn giờ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- ============ TRẠNG THÁI SETUP (Chọn thời gian) ============ -->

    <!-- Card chứa time picker -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_time_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Chọn thời gian hẹn giờ"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Time Picker Container -->
            <LinearLayout
                android:id="@+id/time_picker_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="15sp" />

                    <NumberPicker
                        android:id="@+id/np_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phút"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="15sp" />

                    <NumberPicker
                        android:id="@+id/np_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giây"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="15sp" />

                    <NumberPicker
                        android:id="@+id/np_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--TRẠNG THÁI COUNTDOWN -->

    <!-- Container cho circular progress và time display -->
    <FrameLayout
        android:id="@+id/countdown_container"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/buttons_layout"
        tools:visibility="visible">

        <!-- Circular Progress Bar -->
        <ProgressBar
            android:id="@+id/circular_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/circular_progress_drawable" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Countdown -->
            <TextView
                android:id="@+id/tv_timer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:30"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <!-- Thoi gian con lai -->
            <TextView
                android:id="@+id/tv_remaining_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="còn lại"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Quick countdown times -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_presets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_time_picker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Thời gian có sẵn"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Short times -->
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:chipSpacingHorizontal="16dp"
                app:singleLine="true"
                android:gravity="center">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_1min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 phút"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_3min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 phút"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_5min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 phút"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Medium times -->
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:chipSpacingHorizontal="16dp"
                app:singleLine="true"
                android:gravity="center">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_10min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 phút"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_15min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 phút"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_20min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 phút"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Reset -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="Reset Timer"
            android:visibility="gone"
            app:elevation="6dp"
            app:icon="@drawable/ic_stop"
            tools:visibility="visible" />

        <!-- Start/Pause -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Start Timer"
            app:elevation="6dp"
            app:icon="@drawable/ic_start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>