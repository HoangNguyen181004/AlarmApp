<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Tiêu đề với icon -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_stopwatch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bấm giờ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Card bộ đếm thời gian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timer_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <TextView
            android:id="@+id/tv_stopwatch_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="32dp"
            android:text="00:00.00"
            android:textSize="48sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- Buttons-->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_card">

        <!-- Reset/Lap-->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_reset_lap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="Reset or Lap"
            android:enabled="false"
            app:elevation="6dp"
            app:icon="@drawable/ic_stop" />

        <!-- Start/Pause-->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Start or Pause Stopwatch"
            app:elevation="6dp"
            app:icon="@drawable/ic_start" />

    </LinearLayout>

    <!-- Progress Bars-->
    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons_layout"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/progress_bars_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Previous-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:textColor="@color/previous_lap_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/progress_background_rounded">

                    <ProgressBar
                        android:id="@+id/previous_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_previous_rounded" />
                </FrameLayout>

                <TextView
                    android:id="@+id/previous_time_text"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fastest-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Fastest"
                    android:textColor="@color/fastest_lap_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/progress_background_rounded">

                    <ProgressBar
                        android:id="@+id/fastest_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_fastest_rounded" />
                </FrameLayout>

                <TextView
                    android:id="@+id/fastest_time_text"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Slowest-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Slowest"
                    android:textColor="@color/slowest_lap_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/progress_background_rounded">

                    <ProgressBar
                        android:id="@+id/slowest_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_slowest_rounded" />
                </FrameLayout>

                <TextView
                    android:id="@+id/slowest_time_text"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Average -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Average"
                    android:textColor="@color/average_lap_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/progress_background_rounded">

                    <ProgressBar
                        android:id="@+id/average_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_average_rounded" />
                </FrameLayout>

                <TextView
                    android:id="@+id/average_time_text"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lap RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lap_times"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_card"
        tools:listitem="@layout/item_lap_time" />

</androidx.constraintlayout.widget.ConstraintLayout>